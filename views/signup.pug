extends index.pug

 
 
block content 
    link(rel='stylesheet' href='../static/style2.css')

   
    .card#msg.my-2(style="color:red; text-align:center;height:40px;") #{msg}
    
    .d-flex.justify-content-center.my-5#signupform
        
        form.row.g-3.container#contactform(style='max-width: 500px;' action='/user/signup' method="POST" enctype='multipart/form-data')

            .col-md-12.fomItem
                label.form-label(for='profilePic') Profile Pic
                input.form-control(type='file' name='profilePic' style='color:black;' required='')
            .col-md-12.fomItem
                label.form-label(for='inputEmail4') Email
                input#inputEmail4.form-control(type='email' style='color:black;' name='email' required='')
            .col-md-12.fomItem
                label.form-label(for='inputPassword4') Password
                input#inputPassword4.form-control(type='password' name='password' style='color:black;' required='')
            #username.col-md-12f.fomItem
                label.form-label(for='inputUserName' required='') Username
                input#inputUserName.form-control(type='text' style='color:black;' name='username' oninput ='check()' required='')
                #checkuser 
              
            button.btn.btn-outline-primary#signupbtn(type='submit' style='max-width: 100px;') Sign up
                
                

block script
  script.
        document.getElementsByClassName('active')[0].classList.toggle("active");
        document.getElementById("register").classList.toggle("active");
  script(src='../static/signup.js')